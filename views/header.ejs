<!DOCTYPE html>
<html lang="en">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <head>
    <title>Quiz App</title>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link rel="stylesheet" href="/styles/header.css" />
        <link rel="stylesheet" href="/styles/createingQuizPage.css" />

  </head>
  <body>
    <header class="navbar-brand">
      <% if(!user) { %>
      <button class="home-page">
        <a href="/main-page">Home</a>
      </button>
      <button class="register-page">
        <a href="/register">Sign Up</a>
      </button>
      <button class="login-page"><a href="/login">Sign In</a></button>


      <%  } else { %>
      <button class="home-page">
        <a class="navbar-brand" href="/main-page">Home</a>
      </button>
      <button class="quiz-template">
        <a class="navbar-brand" href="/quizTemplate">Create Quiz Template</a>
      </button>
    <button class="create-quiz">
        <a class="navbar-brand" href="/creating-quiz-page">Create Quiz</a>
      </button>
      <button class="edit-quiz"><a class="navbar-brand" href="/creating-quiz-page">Edit Quiz</a></button>
      <button class="show-quiz"><a class="navbar-brand" href="/quiz-created">Show Quiz</a></button>
      <!--<button class="answer-quiz"><a class="navbar-brand" href="/answerQuiz">Answer Quiz Poll</a></button>-->
      <span class="logged-in">Welcome: <%= user.firstname %></span>
      <span class="user-email">Email: <%= user.email %></span>
      <form method="POST" action="/logout">
        <input class="log-out" type="submit" value="Logout" />
      </form>
      <% } %>
    </header>

